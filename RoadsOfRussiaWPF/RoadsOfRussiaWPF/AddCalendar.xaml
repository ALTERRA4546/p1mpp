<Window x:Class="RoadsOfRussiaWPF.AddCalendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoadsOfRussiaWPF"
        mc:Ignorable="d"
        Title="Событие" Height="340" Width="350" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добавление события" Margin="0,0,0,10" FontSize="16" TextAlignment="Center" FontWeight="Bold"/>
            <Grid Margin="0,0,0,5">
                <Label Content="Тип события"/>
                <ComboBox x:Name="CalendarType" Width="200" Margin="100,0,0,0" HorizontalAlignment="Left"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Label Content="Дата начала"/>
                <DatePicker x:Name="StartDate" Width="200" Margin="100,0,0,0" HorizontalAlignment="Left"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Label Content="Дата окончания"/>
                <DatePicker x:Name="EndDate" Width="200" Margin="100,0,0,0" HorizontalAlignment="Left"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Label Content="Название"/>
                <TextBox x:Name="Title" Width="200" Margin="100,0,0,0" HorizontalAlignment="Left"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Label Content="Описание"/>
                <TextBox x:Name="Description" Width="200" Margin="100,0,0,0" TextWrapping="Wrap" Height="80" HorizontalAlignment="Left"/>
            </Grid>
            <Button x:Name="Save" Content="Добавить" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
